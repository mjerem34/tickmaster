<br><br>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
    <form class="profile_form">
      <label for="user_pseudo">Pseudonyme</label>
      <input type="text" name="user_pseudo" value="<%= @user.pseudo %>" class="form-control">

      <label for="user_email">Adresse mail</label>
      <input type="text" name="user_email" value="<%= @user.email %>" class="form-control">

      <label for="user_name">Nom</label>
      <input type="text" name="user_name" value="<%= @user.name %>" class="form-control">

      <label for="user_surname">Prénom</label>
      <input type="text" name="user_surname" value="<%= @user.surname %>" class="form-control">

      <label for="user_tel">Numéro de téléphone 1</label>
      <input type="text" name="user_tel" value="<%= @user.tel %>" class="form-control">

      <label for="type_user">Type d'utilisateur</label>
      <% if @edit_like_a_boss %>
        <%= select_tag "type_user", options_for_select(@type_users.map{|type_user| [type_user.name, type_user.id]}, @user.type_user_id), class: "form-control" %>
      <% else %>
        <input type="text" name="type_user" value="<%= @user.type_user.name %>" class="form-control" disabled>
      <% end %>

      <label for="user_agency">Agence</label>
      <% if @edit_like_a_boss %>
        <%= select_tag "user_agency", options_for_select(@agencies.map{|agency| [agency.name, agency.id]}, @user.agency_id), class: "form-control" %>
      <% else %>
        <input type="text" name="user_agency" value="<%= @user.agency.name %>" class="form-control" disabled>
      <% end %>

      <% @user.field_users.each do |field_user| %>
        <label for="user_<%= field_user.field_type_user.name %>"></label>
        <input type="button" name="user_<%= field_user.field_type_user.name %>" value="<%= field_user.content %>">
      <% end %>
      <br>
      <div class="row">
        <div class="col-md-12">
          <input type="button" name="valid_changes" value="Valider" class="form-control btn btn-success">
          <%= link_to "Supprimer", user_url, method: :delete, confirm: "Êtes-vous sûr de vouloir supprimer ce compte ?", class: "btn btn-flat btn-danger form-control" if @delete_user %>
        </div>
      </div>
    </form>
  </div>
</div>
