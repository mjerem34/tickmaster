<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<!-- If you delete this meta tag, Earth will fall into the sun. -->
<meta name="viewport" content="width=device-width" />

<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>TickMaster</title>
<link rel="stylesheet" href="email.css" media="screen" charset="utf-8">
</head>
<body bgcolor="#FFF" topmargin="0" leftmargin="0" marginheight="0" marginwidth="0">

<!-- HEADER -->
<table class="head-wrap" bgcolor="#29549E">
	<tr>
		<td></td>
		<td class="header container" >

				<div class="content">
				<table bgcolor="#29549E">
					<tr>
						<td><h2 class="collapse">TickMaster</h2></td>
					</tr>
				</table>
				</div>

		</td>
		<td></td>
	</tr>
</table><!-- /HEADER -->

<!-- BODY -->
<table class="body-wrap">
	<tr>
		<td></td>
		<td class="container" bgcolor="#FFFFFF">

			<div class="column-wrap">

				<div class="column">
				<table>
				<tr>
					<td>

						<h1>Bonjour <%= @users.where(tech_id: '5').pluck(:surname).join('') %></h1>
						<p>Une demande de réaffectation vient de vous être envoyée.</p>
						<p>Voici un résumé de l'incident : </p>
            <p class="callout">
              <strong>Créateur : </strong><br><br>
              <%= @incident.user.name + ' ' + @incident.user.surname %>
            </p>

						<!-- Callout Panel -->
						<% if !@incident.title.nil?%>
						<p class="callout">
							<strong>Titre :
							</strong><br><br>
							<%= @incident.title %>
						</p>
						<% end %>

						<% if !@incident.content.nil?%>
						<p class="callout">
							<strong>Contenu :
							</strong><br><br>
							<%=strip_tags(@incident.content)%>
						</p>
						<!-- /Callout Panel -->
						<% end %>

						<% if !@incident.tech_id.nil?%>
						<p class="callout">
							<strong>Technicien :
							</strong><br><br>
							<%= @users.where(id: @incident.tech_id).pluck(:name, :surname).join(' ') %>
						</p>
						<% end %>

						<p class="callout">
							<strong>Catégorie :
							</strong><br><br>
							<%= @incident.category.name %>
						</p>

						<p class="callout">
							<strong>Sous Catégorie :
							</strong><br><br>
							<%= @incident.sous_category.name%>
						</p>

						<% if !@incident.lvl_urgence_user.nil?%>
						<p class="callout">
							<strong>Niveau d'urgence suggéré par le créateur :
							</strong><br><br>
							<%= @incident.lvl_urgence_user %>
						</p>
						<% end %>
						<%= link_to "Incident &raquo;".html_safe, incident_url(@incident), class: "btn"%>
					</td>
				</tr>
			</table>
			</div>



		</td>
	</tr>
</table><!-- /BODY -->


</body>
</html>
