<%= form_for @procedure, html: { multipart: true } do |f| %>

  <br><div class="field">
    <%= f.label "Titre"%><br>
    <%= f.text_field :nom, size: "100" %><br><br>
    <% if @procedure.errors[:title].first != nil %>
    <div class="alert alert-danger">
      <%= "Objet " + @procedure.errors[:title].first%><br><br><br>
    </div>
    <% end %>
  </div>
    <div class="field">
      <%= f.label "Problème rencontré"%><br>
      <%= f.cktext_area :contenu, :id => 'procedure_contenu procedure_contenu', ckeditor: {uiColor: '#555555'}, required: true%><br>
    </div>
      <div class="field">
        <%= f.label "Solution"%><br>
        <%= f.cktext_area :resolution, :id => 'procedure_resolution procedure_resolution', ckeditor: {uiColor: '#555555'}, required: true%><br>
      </div>
        <div class="field">
          <%= f.label "Categorie du problème"%><br>
          <%= f.text_field :category_id %><br>
        </div>
  <div class="field">
    <%= f.label "Sous categorie du problème"%><br>
    <%= f.text_field :sous_category_id %><br>
  </div>
  <div class="fallback" id="filesinputs">
    <%= f.label "Fichiers"%><br>
      <%= fields_for :file_procedures, @procedure.file_procedures do |i| %>
        <%= i.file_field :file, name: "file_procedures[file][]", multiple: true, id: "attachfile" %>
      <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit "Valider", class: "btn btn-success btn-response btn-to-disable" %>
  </div>
<% end %>
