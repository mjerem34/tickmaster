<!-- Modal informations agence  -->
<div class="container-modal">
  <!-- Modal -->
  <div class="modal fade" id="modalCreateGraphics" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Créer le graphique</h4>
        </div>
        <div class="modal-body">
          <div id="1st">
            <p>Sélectionnez la/les agences sont vous souhaitez créer le graphique puis cliquez sur suivant : </p>
            <button type="button" name="button" class="btn btn-default btn-modal" id="btn-deselectionner">Désélectionner tout</button><br>
            <% @agencies.each do |agency| %>
            <% if agency.ip_adress != "NULL" %>
              <label><input type="checkbox" name="<%= agency.name %>" value="<%= agency.id %>" checked="true" class="checkbox-select"><%= agency.name %></label><br>
              <% end %>
            <% end %>
            <!-- Liste des agences (uniq les pingées) -->
            <!-- si une seule agence alors choisir par défaut mais laisser cette page pour vérification-->
          </div>
            <div id="2nd">
              <p>Entrez un nom pour le graphique : </p>
              <input type="text" name="name" value="" id="graphicName" placeholder="Titre du graphique">
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" name="button" class="btn btn-default btn-modal" id="btn-creer-graphique">Créer</button>
          <button type="button" name="button" class="btn btn-default btn-modal" id="btn-suivant">Suivant</button>
          <button type="button" class="btn btn-danger btn-modal" data-dismiss="modal">Fermer</button>
        </div>
      </div>

    </div>
  </div>

</div>
