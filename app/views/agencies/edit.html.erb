<% @title = "Editer agence"%>
<% !current_user.nil? && if Right.where(name: "edit_agency").pluck(current_user.tech.name).join('')  == 'true' %>

<%= render 'form' %>

<%= link_to 'Annuler', agencies_path, class: "btn btn-danger btn-align", data: { confirm: 'Êtes vous sûr de vouloir annuler (les modifications seront perdues) ?', no_turbolink: true}  %>

<%else%>
<% @title = "Accès non autorisé"%>
<%= flash.now[:not_authorized] = "Vous n'avez pas l'autorisation d'accéder à cette page" %>
<% end %>
