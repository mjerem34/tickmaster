<button type="button" name="button" class="btn btn-flat btn-success" id="agencies_ping">Pinger toutes les agences</button>
<button type="button" name="button" class="btn btn-flat btn-danger" id="agencies_ping_cancel">Stopper</button>
<button type="button" data-toggle="modal" data-target="#modalCreateGraphics" name="button" id="btn-do-graphic" class="btn btn-flat btn-default btn-do-graphic">Faire le graphique</button>
<div class="table-responsive">
  <table class="table table-hover table-bordered" id='table_agencies'>
    <thead>
      <tr>
        <th>Nom</th>
        <th>IP</th>
        <th>Ping</th>
        <th>Pong</th>
      </tr>
    </thead>
    <tbody>
      <% @agencies.each do |agency| %>
      <tr data-ip="<%= agency.ip_adress %>" data-id="<%= agency.id %>" data-name="<%= agency.name %>">
        <td class="hover-cellule <%= agency.id %>" data-toggle="modal" data-target="#<%= agency.id %>"><%= agency.name %></td>
        <td class="hover-cellule <%= agency.id %>" data-toggle="modal" data-target="#<%= agency.id %>"><%= agency.ip_adress == "NULL" ? "" : agency.ip_adress %></td>
        <% if agency.ip_adress != "NULL" %>
        <td id="agencyTd<%= agency.id %>" class="hover-cellule <%= agency.id %>">
          <button type="button" name="button" data-id="<%= agency.id %>" data-ip="<%= agency.ip_adress%>" data-name="<%= agency.name %>" class="btn btn-flat btn-default button_ping_agency">Ping</button>
        </td>
        <td id="agencyTd<%= agency.id %>" class="hover-cellule <%= agency.id %>">
          <button type="button" name="button" data-id="<%= agency.id %>" data-ip="<%= agency.ip_adress%>" data-name="<%= agency.name %>" class="btn btn-flat btn-default button_ping_stop_agency">Stop</button>
        </td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'modalCreateGraphics'%>
